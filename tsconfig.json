{
    "compilerOptions": {
      "target": "es6",
      "rootDir": "src",
      "outDir": "dist",
      "module": "CommonJS",
      "preserveConstEnums": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "isolatedModules": false,
      "moduleResolution": "node",
      "baseUrl": "./",
      // "strict": false,
      "experimentalDecorators": true,
    },
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "utils/**",
    ]
}