{
    "compilerOptions": {
      "target": "es6",
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "preserveConstEnums": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "isolatedModules": false,
      "strict": false,
      "experimentalDecorators": true,
    },
    "files": [
      "src/main.ts",
      "src/server.ts",
      "src/state.ts",
      "src/api_controller.ts",
      "src/utils.ts",
    ]
}